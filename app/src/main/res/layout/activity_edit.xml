<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.lzf.productionlinecontrol.activity.TextManagerActivity">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/topBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="编辑"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:padding="5dp"
            android:src="@drawable/close"
            android:tint="@android:color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/btnBg"
            android:text="特      殊"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/btnBg"
            android:text="格      式"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/btnBg"
            android:text="移      动"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/btnBg"
            android:text="复      制"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/btnBg"
            android:onClick="onClick"
            android:text="退      出"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomBtn"
        android:layout_below="@id/topBar"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/fileHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="文件："
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/fileHint"
                android:text="测试"
                android:textColor="@android:color/black"/>

            <RelativeLayout
                android:id="@+id/editTextRelative"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_below="@id/fileHint"
                android:background="@android:color/white"
                android:gravity="bottom|left"
                android:onClick="onClick">

                <com.lzf.productionlinecontrol.view.CursorListenerEditText
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_border"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="bottom|left"
                    android:imeOptions="flagNoFullscreen"
                    android:inputType="textMultiLine"
                    android:padding="2dp">

                    <requestFocus/>
                </com.lzf.productionlinecontrol.view.CursorListenerEditText>
            </RelativeLayout>

            <TextView
                android:id="@+id/etType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextRelative"
                android:layout_margin="5dp"
                android:paddingRight="20dp"
                android:text="【空      白】"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/ranks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextRelative"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/etType"
                android:text="【行：0，列：0】"
                android:textColor="@android:color/black"/>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
